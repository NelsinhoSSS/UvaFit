@using UvaFit.Enums
@model MatriculaModel
@{
    ViewData["Title"] = "Editar Matrícula";
}

<div class="text-center">


    <h1>Editar Matrícula</h1>

</div>

<form asp-controller="GerenciarMatricula" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do aluno">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="CPF">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o CPF do aluno">
        @Html.ValidationMessageFor(x => x.CPF)
    </div>

    <div class="form-group">
        <label for="E-mail">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do aluno">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="DataCadastro">Data de matriculação</label>
        <input type="date" asp-for="DataCadastro" class="form-control" placeholder="Informe a data de matriculação do aluno">
        @Html.ValidationMessageFor(x => x.DataCadastro)
    </div>

    <div class="form-group">
        <label for="DataPagamento">Data de pagamento</label>
        <input type="date" asp-for="DataPagamento" class="form-control" placeholder="Informe a data de pagamento do aluno">
        @Html.ValidationMessageFor(x => x.DataPagamento)
    </div>

    <div class="form-group">
        <label for="PlanoMatriculaEnum">Plano</label>
        <select asp-for="PlanoMatricula" class="form-control">
            <option value="0">Selecione</option>
            <option value="@PlanoMatriculaEnum.Anual">Anual</option>
            <option value="@PlanoMatriculaEnum.Mensal">Mensal</option>
            <option value="@PlanoMatriculaEnum.Avulso">Avulso</option>

        </select>

    </div>

    <br />

    <button type="submit" class="btn btn-success">Alterar</button>
    <a class="btn btn-secondary" asp-controller="GerenciarMatricula" asp-action="Index" role="button">Voltar</a>

</form>

<style>
    .field-validation-error {
        color: #e01d1d;
    }
</style>



