@model List<MatriculaModel>
@{
    ViewData["Title"] = "Gerenciar Matrícula";
}

<div class="text-center">

    <div class="d-flex justify-content-between">

        <a class="btn btn-danger" role="button" asp-controller="TelaFuncionario" asp-action="Index">Voltar</a>
    </div>

    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"];
        </div>
    }


    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"];
        </div>
    }

    <h1>Listagem de Matrículas</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">E-mail</th>
                <th scope="col">Data de matriculação</th>
                <th scope="col">Data de pagamento</th>
                <th scope="col">Plano</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (MatriculaModel matricula in Model)
                {
                    <tr>
                        <th scope="row">@matricula.Id</th>
                        <td>@matricula.Nome</td>
                        <td>@matricula.CPF</td>
                        <td>@matricula.Email</td>
                        <td>@matricula.DataCadastro</td>
                        <td>@matricula.DataPagamento</td>
                        <td>@matricula.PlanoMatricula</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-danger" asp-route-id="@matricula.Id" asp-controller="GerenciarMatricula" asp-action="DeletarConfirmacao">Deletar</a>
                                <a role="button" class="btn btn-warning" asp-route-id="@matricula.Id" asp-controller="GerenciarMatricula" asp-action="Editar">Editar</a>
                            </div>
                        </td>
                    </tr>

                }

            }
        </tbody>
    </table>

</div>

<style>
    .close-alert {
        position: absolute;
        right: -10px;
        top: -15px;
        border-radius: 15px;
        width: 30px;
        height: 31px;
    }
</style>






