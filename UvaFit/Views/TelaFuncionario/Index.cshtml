@{
    ViewData["Title"] = "Funcionário";
}

<body style="background-color:yellow;">
    <section>
        <div id="matriculas">
            <a asp-controller="GerenciarMatricula" asp-action="Index" class="btn">Gerenciar Matrículas</a>
        </div>
        <div id="pagamentos">
            <a asp-controller="GerenciarTreino" asp-action="Index" class="btn">Gerenciar Treinos</a>
        </div>
        <div id="usuarios">
            <a asp-controller="GerenciarUsuario" asp-action="Index" class="btn">Gerenciar Usuários</a>
        </div>
        <div id="equipamentos">
            <a asp-controller="GerenciarEquipamento" asp-action="Index" class="btn">Gerenciar Equipamentos</a>
        </div>
    </section>
</body>

<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    html {
        font-size: 62.5%;
    }

    body {

        font-size: 1.6rem;
        line-height: 1.2;
        color: #303030;
    }

    }

    section {
        margin-top: 15rem;
        width: 100%;
        height: 100%;
    }

        section div {
            background: white;
            padding: 20px;
            border-radius: 50px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            text-align: center;
        }

        section .btn {
            background: #ffd000;
            color: #004b78;
            padding: 10px 15px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            width: 30rem;
            margin: 2rem auto;
            font-weight: 700;
            font-size: 2rem;
        }

            section .btn:hover {
                background: #0056b3;
                color: #ffd000;
            }
</style>

