@model List<EquipamentoModel>
@{
    ViewData["Title"] = "Gerenciar Equipamento";
}

<div class="text-center">

    <div class="d-flex justify-content-between">
        <a class="btn btn-success" role="button" asp-controller="GerenciarEquipamento" asp-action="Adicionar">Adicionar novo equipamento</a>
        <a class="btn btn-danger" role="button" asp-controller="TelaFuncionario" asp-action="Index">Voltar</a>
    </div>

    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"];
        </div>
    }


    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"];
        </div>
    }

    <h1>Listagem de Equipamentos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (EquipamentoModel equipamento in Model)
                {
                    <tr>
                        <th scope="row">@equipamento.Id</th>
                        <td>@equipamento.Nome</td>
                        <td>@equipamento.SituacaoEquipamento</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-danger" asp-route-id="@equipamento.Id" asp-controller="GerenciarEquipamento" asp-action="DeletarConfirmacao">Deletar</a>
                                <a role="button" class="btn btn-warning" asp-route-id="@equipamento.Id" asp-controller="GerenciarEquipamento" asp-action="Editar">Editar</a>
                            </div>
                        </td>
                    </tr>

                }

            }
        </tbody>
    </table>

</div>

<style>
    .close-alert {
        position: absolute;
        right: -10px;
        top: -15px;
        border-radius: 15px;
        width: 30px;
        height: 31px;
    }
</style>



